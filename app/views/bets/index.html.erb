<p id="notice"><%= notice %></p>

<h1>Bets</h1>

<table>
  <thead>
    <tr>
      <th>Gamepk</th>
      <th>Home</th>
      <th>Away</th>
      <th>Amount</th>
      <th>Gamestatus</th>
      <th>Win</th>
      <th>Loose</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bets.each do |bet| %>
      <tr>
        <td><%= bet.gamePk %></td>
        <td><%= bet.home %></td>
        <td><%= bet.away %></td>
        <td><%= bet.amount %></td>
        <td><%= bet.gameStatus %></td>
        <td><%= bet.win %></td>
        <td><%= bet.loose %></td>
        <td><%= bet.paid %></td>
        <td><%= link_to 'Show', bet %></td>
        <td><%= link_to 'Edit', edit_bet_path(bet) %></td>
        <td><%= link_to 'Destroy', bet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

